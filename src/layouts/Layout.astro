---
import { version } from "../js/git-version.js";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <footer>
      <p>{version}</p>
    </footer>
  </body>
</html>

<style is:global>
  * {
    padding: 0px;
    margin: 0px;
  }

  p {
    margin-top: 2rem;
    background-color: beige;
    text-align: center;
  }
</style>
